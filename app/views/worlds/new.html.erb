<h1>New World</h1>

<%= form_with scope: :world, url: worlds_path, local: true do |form| %>
  
  <% if @world.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@world.errors.count, "error") %> prohibited
        this world from being saved:
      </h2>
      <ul>
        <% @world.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', worlds_path %>